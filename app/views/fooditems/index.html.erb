<h1>Ruokia</h1>

<div class="container">
  <ul>
    <% @fooditems.each do |item| %>
      <li>
        <%= link_to item.name, fooditem_path(item) %>
        , <%= truncate(item.description, :length => 50) %>
        , <%= item.ingredients.count %>
      </li>
    <% end %>
  </ul>

  <div class="btn">
    <%= link_to "Uusi", new_fooditem_path %>
  </div>
  <div class="btn">
  <%= link_to "Ainesosat", ingredients_path %>
  </div>
</div>
