<!DOCTYPE html>
<html>
<head>
  <title>Foodbase</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="topbar">
  <div class="topbar-inner">
    <div class="container">
      <%= link_to "Foodbase", root_path, class: 'brand' %>
      <ul class="nav"> <%= link_to "Foods", fooditems_path %> </ul>
      <ul class="nav"> <%= link_to "Ingredients", ingredients_path %> </ul>
      <ul class="nav"> <%= link_to "Manufacturers", manufacturers_path %> </ul>
    </div>
  </div>
</div>

<div class="container main">
  <%= yield %>
</div>

</body>
</html>
